{
  "compilerOptions": {
    "outDir": "lib/",
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "es5",
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "rootDir": "."
  },
  "include": [
    "index.ts"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}